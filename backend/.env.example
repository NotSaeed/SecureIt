# SecureIt Environment Configuration
# Copy this file to .env and update the values for your environment

# Database Configuration
DB_HOST=localhost
DB_NAME=secureit
DB_USER=root
DB_PASS=

# Security Configuration
ENCRYPTION_KEY=your-secret-encryption-key-here-change-this-in-production
JWT_SECRET=your-jwt-secret-here-change-this-in-production

# Application Settings
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost

# Session Configuration
SESSION_TIMEOUT=3600
SESSION_SECURE=false
SESSION_HTTPONLY=true

# Security Settings
MAX_LOGIN_ATTEMPTS=5
PASSWORD_MIN_LENGTH=8
TOTP_WINDOW=1

# API Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# External APIs
HIBP_API_ENABLED=true
HIBP_API_TIMEOUT=5

# File Upload Settings
MAX_UPLOAD_SIZE=10485760
UPLOAD_PATH=uploads/
ALLOWED_EXTENSIONS=txt,pdf,doc,docx,jpg,png

# Logging
LOG_LEVEL=INFO
LOG_PATH=logs/
LOG_MAX_FILES=30

# Backup Settings
BACKUP_ENABLED=false
BACKUP_PATH=backups/
BACKUP_RETENTION_DAYS=30

# Production Security Headers
SECURITY_HEADERS_ENABLED=true
HSTS_ENABLED=false
HSTS_MAX_AGE=31536000
